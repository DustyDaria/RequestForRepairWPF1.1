    <Window.DataContext>
        <vm:Authorization_ViewModel/>
    </Window.DataContext>

    <StackPanel Orientation="Vertical" >
        <materialDesign:ColorZone 
            Margin="0 0 0 25" 
            Mode="PrimaryMid"
            Padding="16">
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                Text="Учет заявок на ремонт">
                </TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>
        <TextBlock HorizontalAlignment="Center" 
                   Height="auto" Width="auto"
                   TextAlignment="Center"
                   Margin="0 25 0 25"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                   Text="Пожалуйста, авторизуйтесь в системе&#10;используя ваш адрес электронной почты и пароль.">
        </TextBlock>
        <TextBox 
            x:Name="textBox_Email"
                   Margin="200 25 200 25"
            Text="{Binding Path=UserEmail}"
                   Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                   VerticalAlignment="Top"
                   materialDesign:HintAssist.Hint="Логин"/>

        <ctrl:Ctrl_PasswordBox_View
            Margin="200 25 200 25"
            Password="{Binding Path=UserPassword}"/>

