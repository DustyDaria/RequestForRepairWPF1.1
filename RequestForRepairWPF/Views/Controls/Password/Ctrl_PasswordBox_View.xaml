<UserControl x:Class="RequestForRepairWPF.Views.Controls.Password.Ctrl_PasswordBox_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RequestForRepairWPF.Views.Controls.Password"
             mc:Ignorable="d" >
    <PasswordBox 
            x:Name="textBox_Password"
                   Style="{StaticResource MaterialDesignOutlinedPasswordFieldPasswordBox}"
                   VerticalAlignment="Top"
            MaxLength="20"
        PasswordChanged="textBox_Password_PasswordChanged"/>
    
</UserControl>
